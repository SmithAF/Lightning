{
  "compilerOptions": {
    "target": "ES2015",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "lib": [
      "DOM",
      "ES2015",
    ],
    "pretty": true,
    "moduleResolution": "node",
    "module": "es2015",
    "rootDir": "src"
  },
  "exclude": [
    "dist",
    "node_modules",
    "webpack"
  ],
  "typeAcquisition": {
    "enable": true
  },
}